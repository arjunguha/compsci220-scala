#!/bin/bash

DIR=`dirname $0`

if [ $DIR == '/usr/bin' ]; then
  CLASSPATH=/usr/lib/cs220/cmpsci220.jar
elif [ $DIR == '/host/bin' ]; then
  CLASSPATH=/host/lib/cs220/cmpsci220.jar
elif [ -f $DIR/../classpath ]; then
  source $DIR/../classpath
  CLASSPATH=$CLASSPATH:$DIR/../target/scala-2.11/classes
else
  echo "scala220 script failed."
  exit 1
fi

/usr/bin/scala -J-Xmx512m -classpath $CLASSPATH $@
