<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>submission.log</file>
    <append>true</append>
    <encoder>
      <pattern>%date{ISO8601} %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="FILE" />
  </root>

</configuration>