#!/bin/bash

DIR=`dirname $0`

if [ $DIR == '/usr/bin' ]; then
  CLASSPATH=/usr/lib/cs220/submit.jar
  P=/usr/lib/cs220/sanity/settings.conf
elif [ -f $DIR/../classpath ]; then
  source $DIR/../classpath
  CLASSPATH=$CLASSPATH:$DIR/../target/scala-2.11/classes
  P=/home/vagrant/src/website/hw/_grading/sanity/settings.conf
else
  echo "check220 script failed."
  exit 1
fi


ASSIGNMENTS_PATH=$P /usr/bin/scala -classpath $CLASSPATH cs220.submission.top.Main $@
