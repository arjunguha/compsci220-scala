<scalastyle>

 <name>Scalastyle configuration for CMPSCI220</name>

  <check
   level="error"
   class="org.scalastyle.scalariform.NullChecker"
   enabled="true">
    <customMessage>
    You must not use null. The Option[T] type is a better alternative.
    </customMessage>
  </check>

  <check
   level="error"
   class="org.scalastyle.scalariform.ReturnChecker"
   enabled="true">
    <customMessage>
    You do not need to use 'return' in Scala.
    </customMessage>
  </check>

  <check
   level="error"
   class="org.scalastyle.scalariform.WhileChecker"
   enabled="true">
    <customMessage>
    Do not use 'while' loops. Use the 'map' method to process collections.
    </customMessage>
  </check>

  <check
   enabled="true"
   class="org.scalastyle.scalariform.VarFieldChecker"
   level="error">
     <customMessage>
     Do not use 'var' to declare global variables. Use 'val' instead.
     </customMessage>
  </check>

  <check
   enabled="true"
   class="org.scalastyle.scalariform.VarLocalChecker"
   level="error">
     <customMessage>
     Do not use 'var' to declare variables. Use 'val' instead.
     </customMessage>
  </check>

  <check
   enabled="true"
   class="org.scalastyle.scalariform.ProcedureDeclarationChecker"
   level="error">
   <customMessage>
   After the list of parameters, you need to write '=' followed by the function
   body.
   </customMessage>
  </check>

</scalastyle>